# ===========================================
# Master Dashboard Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env files to version control

# Server Configuration
# --------------------
PORT=4000
HOST=127.0.0.1
NODE_ENV=development

# Security
# --------
# Generate with: openssl rand -hex 32
SESSION_SECRET=change-me-in-production-use-openssl-rand-hex-32
# 32-character key for encryption
ENCRYPTION_KEY=change-me-32-character-key-here!

# CORS Configuration
# ------------------
CORS_ORIGIN=http://localhost:3000

# Redis (Optional)
# ----------------
REDIS_URL=redis://localhost:6379

# Logging
# -------
LOG_LEVEL=debug

# Terminal Configuration
# ----------------------
# Max concurrent terminal sessions per user
MAX_TERMINALS_PER_USER=10
# Terminal idle timeout in milliseconds (5 minutes)
TERMINAL_IDLE_TIMEOUT=300000
# Default shell (auto-detected if not set)
# DEFAULT_SHELL=/bin/zsh

# Tmux Session Persistence
# -------------------------
# Idle timeout before killing tmux session (48 hours)
TMUX_IDLE_TIMEOUT_MS=172800000
# Maximum concurrent tmux sessions
TMUX_MAX_SESSIONS=400
# Cleanup check interval (5 minutes)
TMUX_CLEANUP_INTERVAL_MS=300000

# Browser Configuration
# ---------------------
# Max concurrent browser sessions per user
MAX_BROWSERS_PER_USER=5
# Browser idle timeout in milliseconds (10 minutes)
BROWSER_IDLE_TIMEOUT=600000
